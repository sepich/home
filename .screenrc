#Hotkeys F11-F12 for prev-next
bindkey -k F1 prev
bindkey -k F2 next
#F10 to close window
#bindkey -k k; kill

#get scroll buffer dirty
#termcapinfo linux|xterm|rxvt|xterm-color ti@:te@:XT

vbell off
startup_message off
nonblock on
defscrollback 5000
backtick 1 3600 3600 hostname -f
caption always "%-w%{= gk}%n %t%{-}%+w | %=%1` %l [%c]"
#caption string "%-w%{= gk}%n %t%{-}%+w | %=%1` %l [%c]"
defutf8 on
altscreen on
defnonblock 5
defmousetrack on
